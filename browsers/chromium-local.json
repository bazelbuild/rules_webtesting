{
  "environment" : "local",
  "capabilities" : {
    "browserName" : "chrome",
    "goog:chromeOptions" : {
      "binary" : "%FILE:CHROMIUM%",
      "args" : [
        "--headless",
        "--no-sandbox",
        "--use-gl=swiftshader-webgl",
        "--enable-logging=stderr",
        "--v=1"
      ]
    },
    "google:wslConfig": {
      "binary": "%FILE:CHROMEDRIVER%",
      "port":"%WSLPORT:WSL%",
      "args": ["--port=%WSLPORT:WSL%","--verbose"],
      "status": true,
      "shutdown": true
    }
  }
}